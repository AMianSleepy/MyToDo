<UserControl x:Class="DailyApp.WPF.Views.WaitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyApp.WPF.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsShowAddWait}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel Width="400" LastChildFill="False">
                    <TextBlock Text="添加待办" Margin="15,15" FontWeight="Bold" FontSize="30" Foreground="White" DockPanel.Dock="Top"/>

                    <StackPanel Margin="15,0" Orientation="Horizontal" DockPanel.Dock="Top">
                        <TextBlock Text="状态：" FontSize="18" Foreground="White" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="0" FontSize="18" Foreground="White">
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!--     提示词-->
                    <TextBox md:HintAssist.Hint="请输入待办标题" Margin="15" FontSize="18" DockPanel.Dock="Top" Foreground="White"/>
                    <TextBox md:HintAssist.Hint="请输入待办内容" Margin="15" FontSize="18" DockPanel.Dock="Top" MinHeight="150" Foreground="White"/>

                    <Button Content="添加到待办" Margin="20" DockPanel.Dock="Top"/>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>
            
         <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--第一行-->
        <StackPanel Orientation="Horizontal" Margin="30,5,15,10">
            <TextBox VerticalAlignment="Center" md:HintAssist.Hint="查找待办事项..." md:TextFieldAssist.HasClearButton="True"/>
            <TextBlock Text="筛选" Margin="10,0" VerticalAlignment="Center"/>
            <ComboBox SelectedIndex="0">
                <ComboBoxItem>全部</ComboBoxItem>
                <ComboBoxItem>待办</ComboBoxItem>
                <ComboBoxItem>已完成</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <Button Content="＋添加待办" HorizontalAlignment="Right" Margin="15,10" Command="{Binding ShowAddWaitCmm}"/>

        <!--第二行-->
        <ItemsControl Grid.Row="1" HorizontalAlignment="Center" ItemsSource="{Binding WaitList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--水平排列项，当一行空间不足时自动换行-->
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--单张卡片的核心布局-->
                    <Grid Width="230" Height="180" MaxWidth="250" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <md:PopupBox HorizontalAlignment="Right" Panel.ZIndex="1">
                            <Button Content="删除"/>
                        </md:PopupBox>
                        
                        <Border Background="#CBEAFF" Grid.RowSpan="2" CornerRadius="5"/>
                        
                        <TextBlock Text="{Binding Title}" Margin="30,10,5,5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Content}" Margin="10,5" Grid.Row="1"/>

                        <!--画背景装饰-->
                        <Canvas ClipToBounds="True" Grid.RowSpan="2">
                            <Ellipse Canvas.Top="13" Canvas.Left="10" Width="12" Height="12" Fill="#4CAF50" Opacity="0.5"/>
                            <Path Canvas.Bottom="-10" Canvas.Right="-10" Data="M0,0 Q50,50 100,0" Stroke="#E3F2FD" StrokeThickness="30" Stretch="Fill" Width="80" Height="80" Opacity="0.7"/>
                        </Canvas>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>       
        </md:DrawerHost>
    </md:DialogHost>

</UserControl>
