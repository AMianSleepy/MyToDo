<UserControl x:Class="DailyApp.WPF.Views.Dialogs.EditWaitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyApp.WPF.Views.Dialogs"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Padding="20,10" Text="编辑待办" FontWeight="Bold" FontSize="20"/>

        <DockPanel Grid.Row="1" LastChildFill="False" MinWidth="400" MaxWidth="400">
            <StackPanel Margin="20,10" DockPanel.Dock="Top" Orientation="Horizontal">
                <TextBlock Text="状态：" VerticalAlignment="Center"/>
                <ComboBox Margin="10,0,0,0" SelectedIndex="{Binding WaitInfoDTO.Status}" MinWidth="40">
                    <ComboBoxItem>待办</ComboBoxItem>
                    <ComboBoxItem>已完成</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <TextBox Margin="20,0" md:HintAssist.Hint="请输入概要" DockPanel.Dock="Top" Text="{Binding WaitInfoDTO.Title}" TextWrapping="Wrap"/>
            <TextBox Margin="20,10" MinHeight="100" Text="{Binding WaitInfoDTO.Content}" md:HintAssist.Hint="请输入待办内容" DockPanel.Dock="Top"
                     AcceptsReturn="True" TextWrapping="Wrap"/>
        </DockPanel>

        <StackPanel Margin="10" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="取消" Margin="0,0,10,0" Command="{Binding CancelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="修改" Margin="0,0,10,0" Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
