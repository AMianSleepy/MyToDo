<UserControl x:Class="DailyApp.WPF.Views.Dialogs.AddMemoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyApp.WPF.Views.Dialogs"
             mc:Ignorable="d" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Padding="20,10" Text="添加备忘录" FontWeight="Bold" FontSize="20"/>

        <DockPanel Grid.Row="1" LastChildFill="False" MinWidth="400" MaxWidth="400">
            <TextBox Margin="20,0" md:HintAssist.Hint="请输入概要" DockPanel.Dock="Top" Text="{Binding MemoInfoDTO.Title}" TextWrapping="Wrap"/>
            <TextBox Margin="20,10" MinHeight="100" Text="{Binding MemoInfoDTO.Content}" md:HintAssist.Hint="请输入内容" DockPanel.Dock="Top"
                     AcceptsReturn="True" TextWrapping="Wrap"/>
        </DockPanel>

        <StackPanel Margin="10" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="取消" Margin="0,0,10,0" Command="{Binding CancelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="确定" Margin="0,0,10,0" Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
